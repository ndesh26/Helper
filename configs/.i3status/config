general {
  colors = true
  interval = 4
}

order += "disk /"
order += "run_watch VPN"
order += "wireless wlp3s0"
order += "ethernet enp2s0"
order += "battery 1"
order += "volume master"
order += "load"
order += "time"

wireless wlp3s0 {
  format_up = "W: (%quality at %essid) %ip"
  format_down = "W: down"
}

ethernet enp2s0 {
  # sudo setcap cap_net_admin=ep $(which i3status)
  format_up = "E: %ip (%speed)"
  format_down = "E: down"
}

battery 1 {
  format = "%status %percentage"
}

run_watch VPN {
  pidfile = "/var/run/openvpn.pid"
}

time {
  format = "%d.%m.%Y %H:%M"
}

load {
  format = "%1min"
}

disk "/" {
  format = "%free"
}

disk "/home" {
  format = "%free"
}

volume master {
  format = "â™ª: %volume"
  device = "default"
  mixer = "Master"
  mixer_idx = 0
}
