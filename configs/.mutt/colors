
# vim: ft=muttrc:
color body       white       default "^[^>].*" # all but quoted (naive)
color body       brightblue  default "(https|http|ftp|news|telnet|finger)://[^ ]*" 
color body       brightblue  default "[-a-z_0-9.%$]+@[-a-z_0-9.]+\\.[-a-z][-a-z]+"
color body       brightblue  default "mailto:[-a-z_0-9.]+@[-a-z_0-9.]+"
color hdrdefault brightblack default
color indicator  brightwhite red
color normal     white default
color quoted     brightblack default
color signature  brightblack default

# index
color index      brightyellow   default "~N"
color index      yellow         default "~U"    

# header 
color hdrdefault    cyan     default         
color header        brightyellow    default         "^(From)"
color header        brightblue            default         "^(Subject)"
